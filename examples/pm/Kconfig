config EXAMPLES_PM
  tristate "Power Managment example"
  depends on PM && LIB_BOARDCTL
	default n
	---help---
		Enable the pm application

if EXAMPLES_PM

config PM_PRIORITY
	int "Task priority"
	default 100

config PM_STACKSIZE
	int "Stack size"
	default 2048

endif
